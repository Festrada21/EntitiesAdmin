@model IEnumerable<EntitiesAdmin.Data.Entities.Country>

@{
    ViewData["Title"] = "Index";
}

<h2>Countries  <a asp-action="Create" class="dialog-window btn btn-lg btn-success" name="Create" title="Create New"><i class="fas fa-plus-circle"></i></a></h2>

<table class="table table-striped table-bordered" style="width:100%" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditionDateLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EditionDateLocal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusField.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Employee.FullName)
                </td>
                <td id="@item.CountryId">
                    <a asp-action="Edit" name="Edit" class="dialog-window btn btn-warning" asp-route-id="@item.CountryId" title="Edit item"><i class="fas fa-edit"></i></a>
                    <a asp-action="Deletedsds" asp-route-id="@item.CountryId" name="/Countries/Delete/" class="btn btn-danger" id="btnDeleteItem"><i class="fas fa-trash"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_message" />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Alert.js"></script>
    <script src="~/js/Message.js"></script>
    <script src="~/js/Modal.js"></script>
}