@model IEnumerable<EntitiesAdmin.Data.Entities.StatusRequest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusField.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StatusRequestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StatusRequestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StatusRequestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
